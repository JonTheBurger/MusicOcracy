<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <size android:height="@dimen/quarter_circle_size" android:width="@dimen/quarter_circle_size"/>
            <solid android:color="@color/colorPrimaryDark"/>
            <corners android:topRightRadius="@dimen/quarter_circle_size" android:bottomRightRadius="0dp"/>
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape android:shape="rectangle">
            <size android:height="@dimen/quarter_circle_size" android:width="@dimen/quarter_circle_size"/>
            <solid android:color="@color/colorSecondaryDark"/>
            <corners android:topRightRadius="@dimen/quarter_circle_size" android:bottomRightRadius="0dp"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <size android:height="@dimen/quarter_circle_size" android:width="@dimen/quarter_circle_size"/>
            <solid android:color="@color/colorSecondaryLight"/>
            <corners android:topRightRadius="@dimen/quarter_circle_size" android:bottomRightRadius="0dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <size android:height="@dimen/quarter_circle_size" android:width="@dimen/quarter_circle_size"/>
            <solid android:color="@color/colorSecondary"/>
            <corners android:topRightRadius="@dimen/quarter_circle_size" android:bottomRightRadius="0dp"/>
        </shape>
    </item>
</selector>