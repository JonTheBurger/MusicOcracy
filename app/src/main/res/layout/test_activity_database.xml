<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_database"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.musicocracy.fpgk.ui.TestDatabaseActivity">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/request_list"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/save_requests"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Add Requests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="31dp"
        android:onClick="addRequests" />

    <Button
        android:text="Clear Requests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clear_requests"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="26dp"
        android:onClick="clearRequests" />

    <Button
        android:text="Save Requests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/save_requests"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/add_button"
        android:layout_alignStart="@+id/add_button"
        android:onClick="saveRequests" />

    <Button
        android:text="Load Requests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/load_requests"
        android:layout_alignBaseline="@+id/save_requests"
        android:layout_alignBottom="@+id/save_requests"
        android:layout_alignEnd="@+id/clear_requests"
        android:onClick="loadRequests" />
</RelativeLayout>
