<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_now_playing"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.musicocracy.fpgk.ui.NowPlayingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/jukebox_overlay"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nowPlayingPartyCode"
            android:layout_weight="0.08"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_marginTop="40dp"
            android:textStyle="normal|bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nowPlayingPartyName"
            android:layout_weight="0.08"
            android:textSize="24sp"
            android:textAlignment="center"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/nowPlayingTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Now Playing"
            android:textAlignment="center"
            android:textSize="24sp"
            android:layout_marginTop="60dp"
            android:layout_gravity="top|center_vertical" />

        <TextView
            android:id="@+id/currentArtistTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Artist"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/currentSongTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Song"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vote:"
            android:textAlignment="center"
            android:textSize="18sp"
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:layout_marginTop="100dp" />

        <ListView
            android:id="@+id/voteableSongsListView"
            android:layout_width="179dp"
            android:layout_height="162dp"
            android:layout_gravity="bottom|center"
            android:textAlignment="center"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>
