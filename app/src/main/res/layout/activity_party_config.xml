<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_party_config"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:label="Options"
    tools:context="com.musicocracy.fpgk.ui.PartyConfigActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/config_forward_btn"
        android:layout_below="@+id/toolbar"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Party Code" />

            <TextView
                android:id="@+id/party_code_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="36YA9" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Party Name" />

            <EditText
                android:id="@+id/party_name_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:inputType="text"
                android:text="Sick Party"
                android:textSize="14sp" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Tokens" />

            <EditText
                android:id="@+id/token_count_picker"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:inputType="number"
                android:maxLength="2"
                android:text="5" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Token Refill Timer" />

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/token_refill_minute_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="2"
                    android:text="3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":" />

                <EditText
                    android:id="@+id/token_refill_second_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="2"
                    android:text="30" />
            </LinearLayout>
        </TableRow>
    </TableLayout>

    <ImageButton
        android:id="@+id/config_forward_btn"
        android:contentDescription="forward button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:scaleX="-1"
        style="@style/QuarterButtonTheme"
        app:srcCompat="@drawable/back_arrow" />

    <ImageButton
        android:id="@+id/config_backward_btn"
        android:contentDescription="back button"
        android:layout_alignParentBottom="true"
        style="@style/QuarterButtonTheme"
        app:srcCompat="@drawable/back_arrow" />
</RelativeLayout>
