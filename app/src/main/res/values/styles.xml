<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/background_gradient</item>

        <item name="android:buttonStyle">@style/ButtonTheme</item>
    </style>

    <style name="ButtonTheme" parent="@android:style/Widget.Button">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:background">@drawable/btn_rectangle</item>
        <item name="android:textColor">@color/btn_text_color</item>
    </style>

    <style name="QuarterButtonTheme" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/btn_quarter_circle</item>
        <item name="android:layout_width">@dimen/quarter_circle_size</item>
        <item name="android:layout_height">@dimen/quarter_circle_size</item>
        <item name="android:paddingTop">@dimen/quarter_circle_outerpad</item>
        <item name="android:paddingRight">@dimen/quarter_circle_outerpad</item>
        <item name="android:paddingBottom">@dimen/quarter_circle_innerpad</item>
        <item name="android:paddingLeft">@dimen/quarter_circle_innerpad</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="HalfButtonTheme" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/btn_half_circle</item>
        <item name="android:layout_width">@dimen/half_circle_width</item>
        <item name="android:layout_height">@dimen/quarter_circle_size</item>
        <item name="android:paddingBottom">@dimen/half_circle_vertical_pad</item>
        <item name="android:paddingTop">@dimen/half_circle_vertical_pad</item>
        <item name="android:paddingLeft">@dimen/quarter_circle_innerpad</item>
        <item name="android:paddingRight">@dimen/quarter_circle_outerpad</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
